<h1 class="faves-title">Saved Favorites</h1>    
<div class="faves-elements">

<% userFaves.forEach(fave => { %>
    <div class="details">
        <h2><%= fave.title %></h2>
       <div class="movie-poster" >
            <img src="<%= fave.poster %>" />
       </div>
        <a href="/details/<%= fave.imdbid %>">details</a>
    </div>
        
        <div class="comment-box">
            <h3>Add a new comment:</h3>
            <form method="POST" action="/favorites/<%= fave.id%>">
                <input id="comment-username" type="text" name="user_name" placeholder="Username">
                <input id="comment-content" type="text" name="content" placeholder="Write your comment here...">
                <input hidden value="<%= fave.id %>" type="text" name="id">
                <input type="submit">
            </form>
        </div>

        <h3>Comments</h3>

        <% allComments.forEach(comment => { %>
            <% if (comment.faveId = fave.id) { %>
                <div class="coments">
                    <p> <%= comment.user_name %> </p>
                    <p> <%= comment.content %> </p>
                </div>
            <% } %>
        <% }) %>
   
    <div class="delete">
        <form method="POST" action="/favorites/<%= fave.id%>/?_method=DELETE">
            <input type="submit" value="Delete" />
        </form>
    </div>
<% }) %>  
</div>



